[*.cs]

# IDE1006: Naming Styles
dotnet_diagnostic.IDE1006.severity = none

# IDE0063: Use simple 'using' statement
csharp_prefer_simple_using_statement = false

# IDE0056: Use index operator
csharp_style_prefer_index_operator = false

# IDE0028: Simplify collection initialization
dotnet_style_collection_initializer = false

# Suppress namespace/folder mismatch warnings for shared namespace
# https://learn.microsoft.com/dotnet/fundamentals/code-analysis/style-rules/ide0043
# dotnet_style_namespace_match_folder = false is used to disable that rule
dotnet_style_namespace_match_folder = false:none
